# This Makefile builds an executable called school by variables
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -f

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

.PHONY: clean oclean fclean re

clean:
	$(RM) $(NAME) *~

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) $(OBJ) $(NAME) *~

re: all oclean
